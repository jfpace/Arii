                <div id="main_menu">
                {{ render(controller("AriiCoreBundle:Default:menu")) }}
                </div>

                <div id="sec_menu">
                    <div id="GlobalMenuObj"></div>
<script>
var refreshing,
    autorefresh;
var GlobalMenu;
GlobalMenu = new dhtmlXMenuObject("GlobalMenuObj", "dhx_skyblue");
GlobalMenu.setIconsPath( "{{ asset('bundles/ariicore/images/menu/') }}" );
Globalmenu.loadStruct( "{{ url('arii_Focus_globalmenu') }}", function() {
    // menu.addNewSeparator("file");
    refreshing = GlobalMenu.getRadioChecked('refresh');
    autorefresh = setInterval( "GlobalRefresh()", refreshing*1000 );
});

GlobalMenu.attachEvent("onClick", function(id) {
    switch (id) {
        case '0':
        case '5':
        case '30':
        case '60':
        case '300':
        case '900':
        case '1800':
        case '3600':
            clearInterval( autorefresh );
            dhtmlxAjax.get( "{{ url('arii_global_toolbar_update') }}?ref_refresh="+id, GlobalRefresh() );
            autorefresh = setInterval( "GlobalRefresh()", id*1000 );
            break;
    }

});

</script>
