			<div class="sct_left">
				<div class="sct_right">
					<div class="sct_left">
						<div class="sct_right">
    <div id="mygrid" style="height:576px;background-color:white;position:relative;overflow:hidden;"></div>				
						</div>
					</div>
				</div>
			</div>
		</div>
		<!--[if !IE]>end section content top<![endif]-->
		<!--[if !IE]>start section content bottom<![endif]-->
