{% extends "AriiTimeBundle::layout.html.twig" %}
{% block content %}
<!--[if !IE]>start section<![endif]-->	
<div class="section table_section">
	<!--[if !IE]>start title wrapper<![endif]-->
	<div class="title_wrapper">
		<h2>{{ "Countries" | trans }}</h2>
		<span class="title_wrapper_left"></span>
		<span class="title_wrapper_right"></span>
	</div>
	<!--[if !IE]>end title wrapper<![endif]-->
<!--[if !IE]>start section content<![endif]-->
	<div class="section_content">
		<!--[if !IE]>start section content top<![endif]-->
		<div class="sct">
			<div class="sct_left">
				<div class="sct_right">
					<div class="sct_left">
						<div class="sct_right">
<div id="mygrid" style="height:476px;background-color:white;position:relative;overflow:hidden;"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!--[if !IE]>end section content top<![endif]-->
		<!--[if !IE]>start section content bottom<![endif]-->
		<span class="scb"><span class="scb_left"></span><span class="scb_right"></span></span>
		<!--[if !IE]>end section content bottom<![endif]-->
		
	</div>
	<!--[if !IE]>end section content<![endif]-->
</div>
<!--[if !IE]>end section<![endif]-->
<script>
dhtmlx.skin = "dhx_skyblue";
var dhxLayout = new dhtmlXLayoutObject("mygrid","3L");

dhxLayout.cells("a").hideHeader();
dhxLayout.cells("a").setWidth(300);

dhxTree = dhxLayout.cells("a").attachTree();
dhxTree.setImagePath("{{ asset('bundles/ariicore/images/tree/') }}");
dhxTree.enableSmartXMLParsing(true);
//dhxTree.enableCheckBoxes(true);
// dhxTree.enableDragAndDrop(true);
//dhxTree.enableThreeStateCheckboxes(true);
dhxTree.loadXML("{{ url('xml_Time_countries_tree') }}");

dhxLayout.cells("b").hideHeader();
dhxGrid = dhxLayout.cells("b").attachGrid();
var sb = dhxLayout.cells("b").attachStatusBar();
dhxLayout.cells("b").vs[dhxLayout.cells("b").av].sbHeight = 40;
sb.setText('<div id="recinfoArea"></div>');
// dhxGrid.selMultiRows = true;
dhxGrid.setImagePath( "{{ asset('bundles/ariicore/images/treegrid/') }}");
dhxGrid.setHeader("{{ "Location" | trans }},{{ "Status" | trans }},{{ "Status" | trans }},{{ "Status" | trans }}");
// dhxGrid.attachHeader("#text_filter,#select_filter,#cspan,#text_filter");
//mygrid.attachFooter("#stat_count");
dhxGrid.setInitWidths("*,80,30,120");
dhxGrid.setColAlign("left,right,left,right");
dhxGrid.setColTypes("ro,ro,ro,ro");
dhxGrid.setColSorting("str,str,str,str");
dhxGrid.enablePaging(true, "{{ paging_size }}", 3, "recinfoArea");
dhxGrid.setPagingSkin("toolbar","dhx_skyblue");
dhxGrid.setPagingWTMode(true, true, true,["{{ paging_size }}"]);
dhxGrid.init();
dhxGrid.setSkin('dhx_skyblue');
dhxGrid.loadXML("{{ url('xml_Time_countries_list') }}");

dhxLayout.cells("c").hideHeader();
formData = [
	{type: "input", name:"title", label: "Title" }
];

dhxForm = dhxLayout.cells("c").attachForm(formData);

function GlobalRefresh() {
    
}
</script>

{% endblock %}