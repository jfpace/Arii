{% block script %}
<script>
function StateRibbon (itemid,state) {
    switch(itemid) {
        default:
            alert(itemid);
    }
}

function ClickRibbon (itemid,state) {
    switch(itemid) {
    case 'menu_zones':
        window.location = "{{ url('arii_Time_zones') }}";
        break;
    case 'menu_calendars':
        window.location = "{{ url('arii_Time_calendars') }}";
        break;
    case 'menu_rules':
        window.location = "{{ url('arii_Time_rules') }}";
        break;
    case 'menu_references':
        window.location = "{{ url('arii_Time_references') }}";
        break;
    default:
        alert(itemid);
    }
}
</script>
